---
layout: rss-feed
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.blog_title }}</title>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}{{ page.feed_url }}" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    {% for post in site.categories[page.category] %}
    {% unless post.draft %}
    <item>
      <title>{{ post.title }}</title>
      <link>{{ site.url }}{{ post.url }}</link>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <author>{{ post.author_name }}</author>
      <guid>{{ site.url }}{{ post.id }}</guid>
      <description><![CDATA[{{ post.content | expand_urls: site.url | markdownify | xml_escape |cdata_escape }}]]></description>
    </item>
    {% endunless %}
    {% endfor %}
  </channel>
</feed>
